<?php
//valores abaixo devem ser alterados conforme seu banco de dados 
$servername = "";
$username = "";
$password = "";
$dbname = "";

//Quando terminar de inserir os dados renomeie o arquivo para: DB_connection.php
try {
    $link = mysqli_connect($servername, $username, $password, $dbname);
} catch (Exception $e) {
    echo "Connection failed: " . $e->getMessage();
}